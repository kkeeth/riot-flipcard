    "chai": "^5.1.1",
    "coveralls": "^2.13.3",
    "es5-shim": "^4.6.7",
    "karma": "^6.4.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-mocha": "^2.0.1",
    "karma-sauce-launcher": "^4.3.6",
    "karma-sinon": "^1.0.5",
    "karma-spec-reporter": "0.0.36",
    "mocha": "^10.7.3",
    "nyc": "^17.0.0",
    "riot": "^9.3.0",
    "rollup": "^4.21.2",
